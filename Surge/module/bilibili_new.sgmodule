#!name=Bilibili增强（JQ版）
#!desc=拜托，没有广告的哔哩哔哩真的超酷的
#!category=Enhancement

[Map Local]
^https:\/\/app\.bilibili\.com\/x\/resource\/top\/activity data-type=text data="{"code":-404,"message":"0","ttl":1,"data":null}"
^https:\/\/api\.live\.bilibili\.com\/xlive\/e-commerce-interface\/v1\/ecommerce-user\/get_shopping_info\? data-type=text data="{}"

[Body Rewrite]
http-response-jq ^https:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom\? 'del(.data.activity_banner_info) | .data.shopping_info.is_show = 0 | .data.new_tab_info.outer_list |= if . then map(select(.biz_id != 33)) end'

[Script]
