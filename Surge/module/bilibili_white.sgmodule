#!name=2-Bilibili增强(白色B站)
#!desc=拜托，没有广告的哔哩哔哩真的超酷的

[URL Rewrite]
^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.interface\.v1\.Search\/DefaultWords - reject
^https:\/\/app\.bilibili\.com\/x\/resource\/ip - reject

[Script]
bili-skin = type=http-response,pattern=^https:\/\/app\.bilibili\.com\/x\/resource\/show\/skin\?,requires-body=1,script-path=https://gitlab.com/kokoryh/script/-/raw/master/js/bili-suit-diy.js
bili-json = type=http-response,pattern=^https:\/\/app\.bilibili\.com\/x\/(v2\/(search\/square|account\/mine)|resource\/show\/tab\/v2),requires-body=1,script-path=https://gitlab.com/kokoryh/script/-/raw/master/js/bilibili_json.js
bili-proto = type=http-response,pattern=^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.dynamic\.v2\.Dynamic\/DynAll$,requires-body=1,binary-body-mode=1,script-path=https://gitlab.com/kokoryh/script/-/raw/master/js/bilibili-proto.js
bili-live = type=http-response,pattern=^https:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom,requires-body=1,script-path=https://gitlab.com/kokoryh/script/-/raw/master/js/bilibili_json.js
bili-region = type=http-response,pattern=^https:\/\/api\.bilibili\.com\/(pgc\/view\/v\d\/app\/season|x\/offline\/version)\?,requires-body=1,script-path=https://gitlab.com/kokoryh/script/-/raw/master/js/bili_auto_region.js

[MITM]
hostname = %INSERT% grpc.biliapi.net, ap?.bilibili.com, api.live.bilibili.com
